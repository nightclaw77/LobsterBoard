      "y": 300,
      "width": 200,
      "height": 120,
      "properties": {
        "title": "Countdown",
        "targetDate": "2026-02-27",
        "showHours": true,
        "showMinutes": true
      }
    },
    {
      "id": "widget-6",
      "type": "cpu-memory",
      "x": 600,
      "y": 20,
      "width": 200,
      "height": 120,
      "properties": {
        "title": "System",
        "endpoint": "/api/system",
        "refreshInterval": 5
      }
    },
    {
      "id": "widget-7",
      "type": "disk-usage",
      "x": 600,
      "y": 160,
      "width": 200,
      "height": 100,
      "properties": {
        "title": "Disk",
        "path": "/",
        "endpoint": "/api/disk",
        "refreshInterval": 60
      }
    },
    {
      "id": "widget-8",
      "type": "network-speed",
      "x": 600,
